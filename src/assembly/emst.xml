
<!-- This is an assembly file used for all the sample plugins. -->

<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>emst-oxygen</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>emst</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>frameworks/HisTEI</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>HisTEI.framework</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>frameworks/emst</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>target/${project.build.finalName}.jar</source>
            <outputDirectory>/lib</outputDirectory>
        </file>
        <file>
            <source>frameworks/emst/emst.framework</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
    </files>
</assembly>